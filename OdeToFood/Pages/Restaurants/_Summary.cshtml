@using OdeToFood.Core
@model Restaurent


    <div class="card card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card card-footer">
        <a class="btn btn-light" asp-page="./Detail" asp-route-restaurentId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in">Details</i>
        </a>
        <a class="btn btn-info" asp-page="./Edit" asp-route-restaurentId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in">Edit</i>
        </a>
        <a class="btn btn-danger" asp-page="./Delete" asp-route-restaurentId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in">Delete</i>
        </a>
    </div>