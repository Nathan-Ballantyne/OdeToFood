@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

    <h1>Restaurants</h1>

    <form method="get">
        <div class="form-group">
            <div class="input-group">
                <input type="search" class="form-control" asp-for="SearchTerm" />
                <span class="input-group-btn">
                    <button class="btn btn-light">
                        <i class="glyphicon glyphicon-search">Search</i>
                    </button>
                </span>
            </div>
        </div>
    </form>

    <table class="table">
        @foreach (var resturant in Model.Restaurents)
        {
            <tr>
                <td>@resturant.Name</td>
                <td>@resturant.Location</td>
                <td>@resturant.Cuisine</td>
                <td>
                    <a class="btn btn-light" asp-page="./Detail" asp-route-restaurentId="@resturant.Id">
                        <i class="glyphicon glyphicon-zoom-in">Details</i>
                    </a>
                </td>
            </tr>
        }

    </table>    

<div>@Model.Message</div>

